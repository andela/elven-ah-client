{
    "extends": "airbnb", 
    "parser": "babel-eslint",
    "plugins": ["react"],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "env": {
        "browser": true,
        "jasmine": true
      },
    "rules": {
        "react/jsx-filename-extension": [1, {"extensions": [".js", ".jsx"]}],
        "no-underscore-dangle": ["error", { "allow": ["__REDUX_DEVTOOLS_EXTENSION__", "__REDUX_DEVTOOLS_EXTENSION_COMPOSE__"] }],
        "import/extensions": 0,
        "react/forbid-prop-types": ["error", { "allow": ["object"] }],
        "jsx-a11y/anchor-is-valid": [ "error", {
          "components": [ "Link", "NavLink" ],
          "specialLink": [ "to" ]
        }]
    },
    "globals": {
        "window": true
    }
}
